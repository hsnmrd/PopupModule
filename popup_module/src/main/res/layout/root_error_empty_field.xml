<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:theme="@style/Theme.PopupModule"
    android:layout_height="65dp"
    android:gravity="center"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_error_empty_field_title"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_weight="1"
        android:focusable="true"
        android:fontFamily="@font/medium"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:gravity="center"
        android:textSize="@dimen/_13sdp"
        android:textColor="?attr/popup_module_white"
        android:text="وارد کردن "/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_error_empty_field_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="?attr/popup_module_transparent"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:fabSize="mini"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="25dp"
        app:pressedTranslationZ="0dp"
        app:rippleColor="?attr/popup_module_white"
        app:srcCompat="@drawable/root_ic_close"
        app:tint="?attr/popup_module_white"
        app:useCompatPadding="false" />

</LinearLayout>